{
  "src_folders": [
    "src"
  ],
  "webdriver": {
    "start_process": true,
    "server_path": "node_modules/.bin/geckodriver",
    "port": 9515
  },
  "custom_commands_path": "commands",
  "test_settings": {
    "default": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "acceptInsecureCerts": true,
        "elementScrollBehavior": 1,
        "moz:firefoxOptions": {
          "binary": "/home/ec2-user/firefox/firefox"
        },
        "alwaysMatch": {
          "moz:firefoxOptions": {
            "binary": "/home/ec2-user/firefox/firefox",
            "args": [
              "-headless",
              "-p"
            ],
            "profile": "nightwatch"
          }
        }
      }
    }
  },
  "test_workers": true
}
